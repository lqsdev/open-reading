<script>
(function($) {
    var page = {
        url     : "<?php echo $this->url('', array(
            'controller' => 'article',
            'action'     => ''
        )) ?>".replace(/\/$/,""),
        el      : $("#jsList"),
        $       : function(selector){
            return this.el.find(selector);
        },
        init    : function() {
            _.bindAll(this);
            this.$(".check-all").click(this.checkAll);
            this.$(".search-cate").change(this.search);
            this.$(".check-one").click(this.clickOne);
            this.$(".one-action").click(this.oneAction);
            this.$("#article-pull").click(this.pullArticle);
            this.$("#pull-topic").click(this.pullToTopic);
        },
        checkAll : function() {
            var flag=this.$(".check-all").prop("checked");
            this.$(".check-one").prop("checked",flag).each(function(){
                var tr=$(this).parents("tr:first");
                if(flag){
                    tr.addClass("info");
                }else{
                    tr.removeClass("info");
                }
            });
            this.toggleBulk();
        },
        search  : function() {
            var url = "<?php echo $this->url('', array('action' => 'pull')) ?>";
            location.href = url + "?category=" + this.$(".search-cate").val();
        },
        clickOne : function(e) {
            var el = $(e.target),
                tr = el.parents("tr:first");
            if (el.prop("checked")) {
                tr.addClass("info");
            } else {
                tr.removeClass("info");
            }
        },
        oneAction : function(e) {
            var el   = $(e.target),
                id   = el.parents("tr:first").attr("data-id"),
                val  = el.attr("data-value");
            if ('pull' == val) {
                var url = el.attr('data-content');
                url += id;

                this.$('input[name="pull-url"]').val(url);
            } else {
                location.href = this.url + val + "?id=" + id + "&from="
                              + this.encodeUrl();
            }
        },
        encodeUrl   : function() {
            return encodeURIComponent(location.href);
        },
        pullArticle : function(e) {
            var el  = $(e.target);
            var url = el.attr('data-content');

            var id  = [];
            this.$(".check-one:checked").each(function() {
                id.push($(this).val()); 
            });
            var ids = id.join(',');
            url += ids;

            this.$('input[name="pull-url"]').val(url);
        },
        pullToTopic : function(e) {
            var url   = this.$('input[name="pull-url"]').val();
            var topic = this.$('select[name="topics"]').val();
            location.href = url + '/topic-' + topic + "?from=" + this.encodeUrl();
        }
    }
    page.init();
})(jQuery)
</script>
